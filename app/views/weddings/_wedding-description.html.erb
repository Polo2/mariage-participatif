<div class="row wedding-link">
  <% if policy(@wedding).edit? %>
    <%= link_to edit_wedding_path(@wedding) do %>
      <%= icon("far", "edit") %>
      Modifier ces informations
    <% end %>
  <% end %>
</div>
<div class="row min-height-for-map">
  <div class="col-xs-12 col-sm-8">
    <div class="wedding-informations">
      <div class="spouse-photo">
        <% if @wedding.spouse_photo? %>
          <%= cl_image_tag @wedding.spouse_photo.path, width: 130, height: 130, crop: :thumb, gravity: :center %>
        <% end %>
      </div>
      <div class="details">
        <ul>
          <li class="primary">
            <%= icon("fas", "heart") %>
            <%= @wedding.couple_first_names %>
          </li>
          <li class="secondary">
            <%= icon("fas", "calendar") %><%= @wedding.date %>
          </li>
          <li class="secondary">
            <%= icon("fas", "map-marker-alt") %><%= @wedding.location %>
          </li>
        </ul>
      </div>
    </div>
    <div class="wedding-description">
      <blockquote>
        <%= @wedding.description %>
      </blockquote>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4">
    <div class="info-wedding-location">
      <div id="map" style="height: 400px;"></div>
    </div>
  </div>
</div>
